{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "esModuleInterop": true,
    "lib": [
      "ES2020"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "types": [
      "node",
      "mocha",
      "sinon"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}